


<!DOCTYPE html>
<html lang="en" >

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo List</title>
  <link rel="stylesheet" href="/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>

<body class="container   gradient-custom">
  
  

    <div class="heading mt-6">
    <h1 >Todo List</h1>
   
    </div>  
      
     
    <div class="box" >
      <% newListItems.forEach(function(item){ %>
        <form action="/delete" method="POST">
        <div class="item " id="ck-button" value="0">
          <input type="checkbox" name="checkbox" class="strikethrough" value="<%= item._id%>" onChange="this.form.submit()" id="in">
          <P><%=item.name%></P>
        </div>
      </form>

      <%}) %>
    
 
    <form id="add-todo-form"  action="/submit" method="POST">
      
      <input type="text" id="add-item" name="toDoName" placeholder="Add Item">
      <button type="submit">Add +</button>
    </form>
  </div>

  <script src="index.js"></script>
</body>

</html>
